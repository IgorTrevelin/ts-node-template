{
  "name": "ts-eslint-node-template",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npx ts-node-dev -r tsconfig-paths/register --ignore-watch node_modules --respawn ./src/server.ts",
    "lint": "npx eslint --ext .js,.ts --config ./.eslint.json ./src",
    "format": "npx prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "build": "npx tsc",
    "test": "npx jest"
  },
  "keywords": [],
  "author": "Igor Trevelin",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-prettier": "^4.1.0",
    "jest": "^28.1.2",
    "node-notifier": "^10.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
